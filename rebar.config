%% -*- mode: Erlang; -*-

{require_otp_vsn, "R14|R15"}.

{sub_dirs, [ "rel"]}.
% 
% 
 {erl_opts, [
     {parse_transform, lager_transform},
%    no_debug_info,
     {i, "include"},
      warn_unused_vars
 ]}.
     %warnings_as_errors,

{deps, [
      
    {lager,     "2.0.0",    {git, "git://github.com/basho/lager.git",       {tag, "2.0.0"}}},
    {jsx, ".*", {git, "git://github.com/talentdeficit/jsx.git", {branch, "master"}}},
    {cowboy, "0.8.6", {git, "git://github.com/extend/cowboy.git", "0.8.6"}},
    {eprolog, ".*", {git, "git@git.ceb.loc:adaptive-brains/hprolog.git", {branch, "process_zoo_avoid"}}},
%     {eprolog, ".*", {git, "git@git.walk2web.com:eprolog/eprolog.git", {branch, "process_zoo_avoid"}}},
    {mimetypes, ".*", {git, "git://github.com/spawngrid/mimetypes.git", "master"}}

]}.

{cover_enabled, true}.

{clean_files, ["deps/*/ebin", "*.eunit", "ebin"]}.
{app_bin, ["ebin"]}.
{eunit_opts, [
                verbose,
                {report, {eunit_surefire, [{dir, "."}]}}
            ]
}.
